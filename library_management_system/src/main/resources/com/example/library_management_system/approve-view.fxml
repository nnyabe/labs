<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.collections.FXCollections?>
<?import javafx.collections.ObservableList?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0" style="-fx-background-color: #F5F7FB;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label text="Pending Requests" style="-fx-font-size: 24; -fx-text-fill: #3D3BF3; -fx-font-weight: bold;" />

        <!-- TableView to Display Pending Requests -->
        <TableView fx:id="requestsTable" prefHeight="400.0" prefWidth="750.0">
            <columns>
                <TableColumn text="Title" fx:id="titleColumn" prefWidth="200.0" />
                <TableColumn text="Requester" fx:id="requesterColumn" prefWidth="200.0" />
                <TableColumn text="Request Date" fx:id="dateColumn" prefWidth="150.0" />
                <TableColumn text="Action" fx:id="actionColumn" prefWidth="200.0" />
            </columns>
        </TableView>

        <!-- Status Message -->
        <Label fx:id="statusLabel" style="-fx-font-size: 16; -fx-text-fill: red;" />
    </children>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
