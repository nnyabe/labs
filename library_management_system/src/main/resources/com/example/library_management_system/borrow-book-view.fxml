<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.library_management_system.views.BorrowBookView"
      alignment="CENTER" spacing="10.0" prefWidth="400.0" prefHeight="300.0"
      style="-fx-background-color: #F5F5F5; -fx-padding: 20;">
    <children>
        <Label text="Borrow a Book" style="-fx-font-size: 20; -fx-font-weight: bold;" />
        <TextField fx:id="bookIdField" promptText="Enter Book ID" />
        <TextField fx:id="userIdField" promptText="Enter Your User ID" />
        <DatePicker fx:id="borrowDatePicker" promptText="Select Borrow Date" />
        <Button fx:id="borrowButton" text="Borrow Book" style="-fx-background-color: #3D3BF3; -fx-text-fill: white;" />
        <Label fx:id="statusLabel" style="-fx-text-fill: green;" />
    </children>
</VBox>