<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="486.0" prefWidth="800.0" spacing="15.0" style="-fx-background-color: #F5F5F5; -fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.library_management_system.views.TransactionsView">
    <children>
        <Label style="-fx-font-size: 22; -fx-font-weight: bold;" text="Transactions" />
        <TableView fx:id="transactionsTable" prefWidth="750.0" style="-fx-background-color: white; -fx-border-color: #ddd;">
            <columns>
                <!-- Transaction ID -->
                <TableColumn fx:id="transactionIdColumn" prefWidth="100.0" text="Transaction ID" />

                <!-- Order Date -->
                <TableColumn fx:id="orderDateColumn" prefWidth="150.0" text="Order Date" />

                <!-- Approved Date -->
                <TableColumn fx:id="approvedDateColumn" prefWidth="150.0" text="Approved Date" />

                <!-- Return Date -->
                <TableColumn fx:id="returnDateColumn" prefWidth="150.0" text="Return Date" />

                <!-- Status -->
                <TableColumn fx:id="statusColumn" prefWidth="120.0" text="Status" />

                <!-- Resource Type -->
                <TableColumn fx:id="resourceTypeColumn" prefWidth="100.0" text="Resource Type" />

                <!-- Transaction Type -->
                <TableColumn fx:id="transactionTypeColumn" prefWidth="150.0" text="Transaction Type" />

                <!-- Actions -->
                <TableColumn fx:id="actionColumn" prefWidth="150.0" text="Actions" />
            </columns>
        </TableView>
        <Button fx:id="refreshButton" style="-fx-background-color: #3D3BF3; -fx-text-fill: white; -fx-font-size: 14;" text="Refresh" />
    </children>
</VBox>
