<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.library_management_system.views.TransactionsView" alignment="CENTER" spacing="15.0" prefWidth="600.0" prefHeight="400.0" style="-fx-background-color: #F5F5F5; -fx-padding: 20;">
    <children>
        <Label text="Transactions" style="-fx-font-size: 22; -fx-font-weight: bold;" />
        <TableView fx:id="transactionsTable" prefWidth="580.0" style="-fx-background-color: white; -fx-border-color: #ddd;">
            <columns>
                <TableColumn fx:id="transactionIdColumn" text="Transaction ID" prefWidth="100.0" />
                <TableColumn fx:id="typeColumn" text="Type" prefWidth="80.0" />
                <TableColumn fx:id="bookIdColumn" text="Book ID" prefWidth="100.0" />
                <TableColumn fx:id="userIdColumn" text="User ID" prefWidth="100.0" />
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="100.0" />
                <TableColumn fx:id="actionColumn" text="Actions" prefWidth="100.0" />
            </columns>
        </TableView>
        <Button fx:id="refreshButton" text="Refresh" style="-fx-background-color: #3D3BF3; -fx-text-fill: white; -fx-font-size: 14;" />
    </children>
</VBox>
